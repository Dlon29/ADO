namespace LAVA.SwiftInbound.Subscriber.Shared.Models
{
    public class AppSettings
    {
        public int RetryInterval { get; set; }
    }
}

 "AppSettings": {
   "RetryInterval": 15 //In seconds 
 }  

Program.cs:
 services.Configure<AppSettings>(ctx.Configuration.GetSection("AppSettings"));

SubscriberWorker:
public class SubscriberWorker(ILogger<SubscriberWorker> logger,
                        IOptions<AppSettings> appSettings,
                        ISwiftInboundConsumer swiftInboundMQConsumer) : BackgroundService
{
    private readonly ILogger<SubscriberWorker> _logger = logger;
    private readonly AppSettings _appSettings = appSettings.Value;
    private readonly ISwiftInboundConsumer _swiftInboundMQConsumer = swiftInboundMQConsumer;


 Task.Delay(TimeSpan.FromSeconds(_appSettings.RetryInterval), ct).GetAwaiter().GetResult();


